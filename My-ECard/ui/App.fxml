               <image>
                  <Image url="@../resources/default_id.jpg" />
               </image>
            </ImageView>
            <Button fx:id="id_btn" layoutX="162.0" layoutY="530.0" mnemonicParsing="false" onAction="#loadIdImage" prefHeight="62.0" prefWidth="65.0" text="PICK" />
            <TextField fx:id="tfName" layoutX="422.0" layoutY="434.0" onAction="#onNameEntered" prefHeight="50.0" prefWidth="700.0" promptText="NAME" style="-fx-font-size: 20;" visible="false" />
            <TextField fx:id="tfAddress" layoutX="422.0" layoutY="494.0" onAction="#onAddressEntered" prefHeight="50.0" prefWidth="700.0" promptText="ADDRESS" style="-fx-font-size: 20;" visible="false" />
