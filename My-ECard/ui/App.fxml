            <TextField fx:id="tfWebsite" layoutX="422.0" layoutY="674.0" onAction="#onWebsiteEntered" prefHeight="50.0" prefWidth="700.0" promptText="WEBSITE" style="-fx-font-size: 20;" visible="false" />
            <Button fx:id="btn_0" layoutX="1122.0" layoutY="434.0" mnemonicParsing="false" onMouseClicked="#onSubmitName" prefHeight="50.0" prefWidth="66.0" text="Submit" visible="false" />
            <Button fx:id="btn_1" layoutX="1122.0" layoutY="494.0" mnemonicParsing="false" onMouseClicked="#onSubmitAddress" prefHeight="50.0" prefWidth="66.0" text="Submit" visible="false" />
            <Button fx:id="btn_2" layoutX="1122.0" layoutY="554.0" mnemonicParsing="false" onMouseClicked="#onSubmitPhone" prefHeight="50.0" prefWidth="66.0" text="Submit" visible="false" />
            <Button fx:id="btn_3" layoutX="1122.0" layoutY="614.0" mnemonicParsing="false" onMouseClicked="#onSubmitEmail" prefHeight="50.0" prefWidth="66.0" text="Submit" visible="false" />
            <Button fx:id="btn_4" layoutX="1122.0" layoutY="674.0" mnemonicParsing="false" onMouseClicked="#onSubmitWebsite" prefHeight="50.0" prefWidth="66.0" text="Submit" visible="false" />
            <Label fx:id="label_0" layoutX="433.0" layoutY="431.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#onClickName" prefHeight="55.0" prefWidth="700.0" text="NAME">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="label_1" layoutX="433.0" layoutY="492.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#onClickAddress" prefHeight="55.0" prefWidth="700.0" text="ADDRESS">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="label_2" layoutX="433.0" layoutY="552.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#onClickPhone" prefHeight="55.0" prefWidth="700.0" text="PHONE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="label_3" layoutX="433.0" layoutY="612.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#onClickEmail" prefHeight="55.0" prefWidth="700.0" text="EMAIL">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="label_4" layoutX="433.0" layoutY="672.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#onClickWebsite" prefHeight="55.0" prefWidth="700.0" text="WEBSITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </center>
</BorderPane>
